<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_marginEnd="@dimen/size20"
    android:layout_marginStart="@dimen/size20"
    android:layout_marginTop="@dimen/size50"
    app:cardCornerRadius="@dimen/size8"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:id="@+id/ask_me_ques_child_lay"
        style="@style/LayoutWidMatch_HeiWrap">

        <ImageView
            android:id="@+id/close_img"
            android:layout_width="@dimen/size25"
            android:layout_height="@dimen/size25"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/size5"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/size8"
            android:src="@drawable/close_icon_new" />

        <LinearLayout
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_marginStart="@dimen/size25"
            android:layout_marginTop="@dimen/size10"
            android:layout_toStartOf="@+id/close_img"
            android:orientation="vertical">

            <TextView
                style="@style/TextSemiBold"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/ask_ques"
                android:textColor="@color/black"
                android:textSize="@dimen/text15" />

            <View
                style="@style/LayoutWidMatch_HeiWrap"
                android:layout_height="@dimen/size25"
                android:adjustViewBounds="true"
                android:layout_marginTop="@dimen/size7"
                android:layout_marginEnd="@dimen/size15"
                android:layout_marginStart="@dimen/size15"
                android:layout_marginBottom="@dimen/size10"
                android:contentDescription="@string/app_name"
                android:background="@drawable/ask_me_ques_bg" />

        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/size55"
            android:layout_height="@dimen/size55"
            android:adjustViewBounds="true"
            android:layout_marginStart="@dimen/size6"
            android:padding="@dimen/size7"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ask_ques" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
