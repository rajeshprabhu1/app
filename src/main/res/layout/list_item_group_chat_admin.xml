<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_marginBottom="@dimen/size8"
    android:layout_marginEnd="@dimen/size16"
    android:layout_marginStart="@dimen/size16"
    android:layout_marginTop="@dimen/size4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_group_chat_date"
        style="@style/TextBold"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/size12"
        android:layout_marginTop="@dimen/size23"
        android:background="@drawable/group_chat_date_background"
        android:gravity="center"
        android:paddingBottom="@dimen/size4"
        android:paddingEnd="@dimen/size8"
        android:paddingStart="@dimen/size8"
        android:paddingTop="@dimen/size4"
        android:textColor="@color/groupChatDateText"
        android:textSize="@dimen/text8" />

    <TextView
        android:id="@+id/text_group_chat_message"
        style="@style/TextBold"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="@dimen/size12"
        android:paddingEnd="@dimen/size16"
        android:paddingStart="@dimen/size16"
        android:paddingTop="@dimen/size12"
        android:textColor="@color/black"
        android:textSize="@dimen/text9" />

</LinearLayout>

