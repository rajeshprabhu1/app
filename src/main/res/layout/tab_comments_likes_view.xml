<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutMatch"
    android:background="@color/app_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/comments_lay"
        style="@style/LayoutWidMatch_HeiWei">

        <LinearLayout
            android:id="@+id/comments_inner_lay"
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_height="@dimen/size35"
            android:background="@color/dark_blue"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/comments_img"
                android:layout_width="@dimen/size15"
                android:layout_height="@dimen/size15"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/size7" />

            <TextView
                android:id="@+id/comments_txt"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:padding="@dimen/size5"
                android:textSize="@dimen/size10"
                android:text="@string/comments"
                android:textAllCaps="true"
                android:textColor="@color/white" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/comments_marker_lay"
            android:layout_width="@dimen/size10"
            android:layout_height="@dimen/size10"
            android:layout_below="@+id/comments_inner_lay"
            android:layout_centerInParent="true"
            android:background="@drawable/down_icon"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/likes_lay"
        style="@style/LayoutWidMatch_HeiWei">

        <LinearLayout
            android:id="@+id/likes_inner_lay"
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_height="@dimen/size35"
            android:background="@drawable/app_blue_color_with_border_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/likes_img"
                android:layout_width="@dimen/size15"
                android:layout_height="@dimen/size15"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/size7" />

            <TextView
                android:id="@+id/likes_txt"
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:padding="@dimen/size5"
                android:text="@string/likes"
                android:textAllCaps="true"
                android:textSize="@dimen/size10"
                android:textColor="@color/black" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/likes_marker_lay"
            android:layout_width="@dimen/size10"
            android:layout_height="@dimen/size10"
            android:layout_below="@+id/likes_inner_lay"
            android:layout_centerInParent="true"
            android:background="@drawable/down_icon"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>
