<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_height="@dimen/size135"
    android:paddingBottom="@dimen/size10"
    android:paddingEnd="@dimen/size10"
    android:paddingStart="@dimen/size10">

    <ImageView
        android:id="@+id/camera_img"
        android:layout_width="@dimen/size45"
        android:layout_height="@dimen/size45"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/size5"
        android:src="@drawable/camera" />

    <LinearLayout
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_toEndOf="@+id/camera_img"
        android:layout_toStartOf="@+id/feed_img"
        android:gravity="center|bottom">

        <ImageView
            android:id="@+id/dis_covert_floating_img"
            android:layout_width="@dimen/size45"
            android:layout_height="@dimen/size45"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/size45"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/size5"
            android:src="@drawable/dis_covert_floating"
            android:visibility="invisible" />

        <LinearLayout
            style="@style/LayoutWrap"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hidden_gems_floating_img"
                android:layout_width="@dimen/size45"
                android:layout_height="@dimen/size45"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/size15"
                android:adjustViewBounds="true"
                android:padding="@dimen/size5"
                android:contentDescription="@string/app_name"
                android:src="@drawable/hidden_gems_floating"
                android:visibility="invisible"  />

            <ImageView
                android:id="@+id/main_floating_img"
                android:layout_width="@dimen/size65"
                android:layout_height="@dimen/size65"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/main_floating" />
        </LinearLayout>

        <ImageView
            android:id="@+id/un_dis_cover_floating_img"
            android:layout_width="@dimen/size45"
            android:layout_height="@dimen/size45"
            android:layout_marginBottom="@dimen/size45"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/size5"
            android:src="@drawable/un_dis_cover_floating"
            android:visibility="invisible"  />
    </LinearLayout>

    <ImageView
        android:id="@+id/feed_img"
        android:layout_width="@dimen/size45"
        android:layout_height="@dimen/size45"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/size5"
        android:src="@drawable/feed" />

</RelativeLayout>
