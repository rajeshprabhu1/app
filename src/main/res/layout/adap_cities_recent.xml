<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutWidMatch_HeiWrap"
    android:orientation="vertical">

    <RelativeLayout style="@style/LayoutWidMatch_HeiWrap">

        <RelativeLayout
            android:id="@+id/user_img_lay"
            android:layout_width="@dimen/size85"
            android:layout_height="@dimen/size85"
            >

            <RelativeLayout
                style="@style/LayoutMatch"
                android:padding="@dimen/size10">

                <com.ouam.app.utils.RoundedImageView
                    android:id="@+id/user_bg_img"
                    style="@style/LayoutMatch"
                    android:layout_margin="@dimen/size4"
                    android:src="@color/dark_blue" />

                <com.ouam.app.utils.RoundedImageView
                    android:id="@+id/user_img"
                    style="@style/LayoutMatch"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/size6"
                    android:clickable="false"
                    android:src="@color/dark_blue" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/pin_type_image"
                android:layout_width="@dimen/size40"
                android:layout_height="@dimen/size40"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:paddingStart="@dimen/size15"
                android:paddingEnd="0dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/to_be_explored_icon"
                android:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/user_img_lay"
            android:orientation="vertical"
            android:paddingEnd="@dimen/size5"
            android:paddingStart="@dimen/size4"
            >

            <RelativeLayout style="@style/LayoutWidMatch_HeiWrap">

                <TextView
                    android:id="@+id/user_name_txt"
                    style="@style/TextBold"
                    android:gravity="start"
                    android:layout_width="wrap_content"
                    android:maxWidth="@dimen/size140"
                    android:textSize="@dimen/text10" />

                <TextView
                    android:id="@+id/pinned_txt"
                    style="@style/TextMedium"
                    android:layout_marginEnd="@dimen/size1"
                    android:paddingTop="@dimen/size5"
                    android:paddingBottom="0dp"
                    android:layout_toEndOf="@+id/user_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_toStartOf="@+id/hours_txt"
                    android:gravity="start|center"
                    android:textColor="@color/light_gray"
                    android:text="@string/pinned"
                    android:textSize="@dimen/text10" />

                <TextView
                    android:id="@+id/hours_txt"
                    style="@style/TextMedium"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/light_gray"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/size2"
                    android:gravity="bottom"
                    android:textSize="@dimen/text8" />

            </RelativeLayout>

            <RelativeLayout style="@style/LayoutWidMatch_HeiWrap">


                <TextView
                    android:id="@+id/place_name_txt"
                    style="@style/TextBold"
                    android:layout_toStartOf="@+id/right_arrow_img"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text10"
                    android:visibility="gone"/>


                <TextView
                    android:id="@+id/address_txt"
                    style="@style/TextBold"
                    android:layout_below="@+id/place_name_txt"
                    android:layout_toStartOf="@+id/right_arrow_img"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text10" />


                <TextView
                    android:id="@+id/travel_status_txt"
                    style="@style/TextMedium"
                    android:layout_below="@+id/address_txt"
                    android:layout_toStartOf="@+id/right_arrow_img"
                    android:gravity="start"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/text10" />

                <ImageView
                    android:id="@+id/right_arrow_img"
                    android:layout_width="@dimen/size20"
                    android:layout_height="@dimen/size20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:paddingBottom="@dimen/size5"
                    android:paddingEnd="0dp"
                    android:paddingStart="@dimen/size5"
                    android:paddingTop="@dimen/size5"
                    android:src="@drawable/right_icon"
                    android:textSize="@dimen/text10"/>
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

    <View
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_height="@dimen/size0.5"
        android:background="@color/app_border" />


</LinearLayout>
