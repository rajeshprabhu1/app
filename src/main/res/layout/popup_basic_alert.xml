<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_margin="@dimen/size15">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/size10">
    <LinearLayout
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_margin="@dimen/size1"
        android:orientation="vertical">

        <TextView
            style="@style/TextRegular"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/text13" />

        <View
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_height="@dimen/size1"
            android:background="@color/app_border" />

        <TextView
            android:id="@+id/alert_msg_txt"
            style="@style/TextBold"
            android:padding="@dimen/size15"
            android:textSize="@dimen/text11" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size37"
            android:gravity="center"
            android:layout_marginBottom="@dimen/size10"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/size10"
            android:paddingStart="@dimen/size10"
            android:weightSum="2">

            <Button
                android:id="@+id/alert_negative_btn"
                style="@style/ButtonBold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/size5"
                android:layout_marginStart="@dimen/size5"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text10"
                android:visibility="gone" />

            <Button
                android:id="@+id/alert_positive_btn"
                style="@style/ButtonBold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/size5"
                android:layout_marginStart="@dimen/size5"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text10" />

        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
