<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutWidMatch_HeiWrap"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/view_background"
        style="@style/LayoutMatch"
        android:background="@color/red">

        <TextView
            android:id="@+id/delete_icon"
            style="@style/TextBold"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/size10"
            android:padding="@dimen/size10"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:textSize="@dimen/text13" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/view_foreground"
        style="@style/LayoutWidMatch_HeiWrap"
        android:background="@color/white"
        android:padding="@dimen/size5">


        <LinearLayout
            android:id="@+id/offline_mode_txt_lay"
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/offline_mode_arrow_img"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/location_name_txt"
                style="@style/TextRegular"
                android:gravity="start"
                android:paddingBottom="@dimen/size5"
                android:paddingEnd="0dp"
                android:paddingStart="@dimen/size10"
                android:paddingTop="@dimen/size10"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/size13" />

            <TextView
                android:id="@+id/lat_long_txt"
                style="@style/TextRegular"
                android:gravity="start"
                android:paddingBottom="@dimen/size10"
                android:paddingEnd="0dp"
                android:paddingStart="@dimen/size10"
                android:paddingTop="0dp"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/text12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/offline_mode_arrow_img"
            style="@style/LayoutWrap"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/offline_pin_time_txt"
                style="@style/TextRegular"
                android:paddingTop="@dimen/size10"
                android:singleLine="true"
                android:layout_gravity="start"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/size10" />

            <LinearLayout
                style="@style/LayoutWrap"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/pin_type_img"
                    android:layout_width="@dimen/size35"
                    android:layout_height="@dimen/size35"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/size4"
                    android:src="@drawable/check_icon" />


                <ImageView
                    android:layout_width="@dimen/size15"
                    android:layout_height="@dimen/size15"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/down_arrow"
                    android:rotation="-90"
                    android:layout_marginTop="@dimen/size4"
                    android:layout_marginEnd="@dimen/size5"
                    android:textSize="@dimen/text10"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_height="@dimen/size0.5"
        android:background="@color/app_border" />
</FrameLayout>
