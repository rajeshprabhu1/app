<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:left="2dp" android:top="2dp">
                <shape>

                    <solid android:color="@color/un_selected_dot" />
                </shape>
            </item>
            <item
                android:drawable="@drawable/blue_bg"
                android:bottom="1dp"  android:right="2dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="@color/un_selected_dot" android:startColor="@color/un_selected_dot" />
                    <stroke android:width="1dp" android:color="@color/un_selected_dot" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>