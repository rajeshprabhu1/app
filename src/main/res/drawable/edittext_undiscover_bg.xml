<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">


    <item>
        <shape>

            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->
            <gradient
                android:endColor="@color/un_discovered_bg_end_color"
                android:startColor="@color/un_discovered_bg_start_color" />

            <padding
                android:bottom="@dimen/size3"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <corners android:radius="@dimen/size3" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/size3" />
        </shape>
    </item>

</layer-list>
