<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!-- App general theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
    </style>

    <!-- App Anim theme -->
    <style name="AnimAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
    </style>

    <!--Splash Screen theme -->
    <style name="AppSplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowFullscreen">true</item>
        <!--</item>-->

    </style>


    <!--Hint style-->
    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorControlActivated">@color/light_gray</item>
        <item name="colorControlHighlight">@color/light_gray</item>
        <item name="android:textSize">@dimen/text9</item>
    </style>


    <!-- Layout style - (width and height both are match_parent) -->
    <style name="LayoutMatch" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Layout style - (width and height both are wrap_content) -->
    <style name="LayoutWrap" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Layout style - (width match_parent and  height wrap_content) -->
    <style name="LayoutWidMatch_HeiWrap" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Layout style - (width match_parent and  height wrap_content) -->
    <style name="LayoutWidWrap_HeiMatch" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <!-- Layout style - (width match_parent and  height 0dip) -->
    <style name="LayoutWidMatch_HeiWei" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Layout style - (width 0dip and  height wrap_content) -->
    <style name="LayoutWidWei_HeiWrap" parent="AppTheme">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--Text Bold -->
    <style name="TextBold" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text15</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">fonts/Dosis-Bold.otf</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Text Semi Bold -->
    <style name="TextSemiBold" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text15</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">fonts/Dosis-SemiBold.otf</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Text Regular-->
    <style name="TextRegular" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text15</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">fonts/Dosis-Regular.otf</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Text Medium -->
    <style name="TextMedium" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text13</item>
        <item name="fontPath">fonts/Dosis-Medium.otf</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Edit text style Roboto-Regular-->
    <style name="EditTextBold" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size40</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/size5</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textSize">@dimen/text13</item>
        <item name="fontPath">fonts/Dosis-Bold.otf</item>
    </style>

    <!--Edit text style Roboto-Regular-->
    <style name="EditTextSemiBold" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size40</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/size5</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textSize">@dimen/text13</item>
        <item name="fontPath">fonts/Dosis-SemiBold.otf</item>
    </style>

    <!--Edit text style Roboto-Regular-->
    <style name="EditTextMedium" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size40</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/size5</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">@dimen/text13</item>
        <item name="fontPath">fonts/Dosis-Medium.otf</item>
    </style>

    <!--Edit text style Roboto-Regular-->
    <style name="EditTextRegular" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size40</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/size5</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">@dimen/text13</item>
        <item name="fontPath">fonts/Dosis-Regular.otf</item>
    </style>

    <!--Button text style Bold-->
    <style name="ButtonBold" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/size40</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">@dimen/text15</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ping_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dip</item>
        <item name="fontPath">fonts/Dosis-Bold.otf</item>
    </style>

    <!--Dialog box-->
    <style name="PopupBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_in_top</item>
    </style>

    <!--CustomeTabText-->
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text11</item>
        <item name="fontPath">fonts/Dosis-Regular.otf</item>

    </style>

</resources>
